--// ================================
--// SERVICES
--// ================================
local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")
local RbxAnalytics = game:GetService("RbxAnalyticsService")

local player = Players.LocalPlayer

--// ================================
--// EXECUTOR REQUEST
--// ================================
local Request =
    (syn and syn.request) or
    http_request or
    request or
    (fluxus and fluxus.request)

if not Request then
    player:Kick("‚ùå Executor not supported")
    return
end

--// ================================
--// API URL
--// ================================
local API_URL = "https://han2343.pythonanywhere.com/check"

--// ================================
--// DEVICE ID (ANTI SHARE)
--// ================================
local DEVICE_ID =
    (syn and syn.gethwid and syn.gethwid()) or
    (gethwid and gethwid()) or
    RbxAnalytics:GetClientId()

--// ================================
--// KEY VALIDATION (WAJIB INPUT)
--// ================================
if typeof(script_key) ~= "string" or script_key == "" then
    player:Kick("‚ùå Key wajib diinput sebelum load script")
    return
end

local KEY = tostring(script_key)

--// ================================
--// MINIMALIST NOTIFICATION UI
--// ================================
local function ShowNotification(text, isError)
    local playerGui = player:WaitForChild("PlayerGui")
    
    -- Cleanup existing notifications
    for _, gui in pairs(playerGui:GetChildren()) do
        if gui.Name == "NexaNotify" then
            gui:Destroy()
        end
    end
    
    -- Create GUI
    local gui = Instance.new("ScreenGui")
    gui.Name = "NexaNotify"
    gui.ResetOnSpawn = false
    gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    gui.Parent = playerGui
    
    -- Main Frame
    local frame = Instance.new("Frame")
    frame.Parent = gui
    frame.Size = UDim2.new(0, 280, 0, 50)
    frame.Position = UDim2.new(1, -300, 0.1, 0)
    frame.AnchorPoint = Vector2.new(1, 0)
    frame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
    frame.BorderSizePixel = 0
    
    -- Corner
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 6)
    corner.Parent = frame
    
    -- Accent Border (Left side)
    local accent = Instance.new("Frame")
    accent.Parent = frame
    accent.Size = UDim2.new(0, 3, 1, 0)
    accent.Position = UDim2.new(0, 0, 0, 0)
    accent.BackgroundColor3 = isError and Color3.fromRGB(255, 50, 50) or Color3.fromRGB(0, 200, 100)
    accent.BorderSizePixel = 0
    
    local accentCorner = Instance.new("UICorner")
    accentCorner.CornerRadius = UDim.new(0, 6)
    accentCorner.Parent = accent
    
    -- Shadow
    local shadow = Instance.new("ImageLabel")
    shadow.Parent = frame
    shadow.Size = UDim2.new(1, 10, 1, 10)
    shadow.Position = UDim2.new(0, -5, 0, -5)
    shadow.BackgroundTransparency = 1
    shadow.Image = "rbxassetid://5554237731"
    shadow.ImageColor3 = Color3.fromRGB(0, 0, 0)
    shadow.ImageTransparency = 0.5
    shadow.ScaleType = Enum.ScaleType.Slice
    shadow.SliceCenter = Rect.new(23, 23, 277, 277)
    shadow.SliceScale = 1
    shadow.ZIndex = -1
    
    -- Icon
    local icon = Instance.new("TextLabel")
    icon.Parent = frame
    icon.Size = UDim2.new(0, 30, 0, 30)
    icon.Position = UDim2.new(0, 15, 0.5, -15)
    icon.BackgroundTransparency = 1
    icon.Text = isError and "‚ö†" or "‚úì"
    icon.Font = Enum.Font.GothamSemibold
    icon.TextSize = 18
    icon.TextColor3 = isError and Color3.fromRGB(255, 50, 50) or Color3.fromRGB(0, 200, 100)
    
    -- Text Label
    local label = Instance.new("TextLabel")
    label.Parent = frame
    label.Size = UDim2.new(1, -60, 1, -10)
    label.Position = UDim2.new(0, 45, 0, 5)
    label.BackgroundTransparency = 1
    label.TextWrapped = true
    label.Font = Enum.Font.Gotham
    label.TextSize = 13
    label.TextColor3 = Color3.fromRGB(220, 220, 220)
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Text = text
    
    -- Close button (X)
    local closeBtn = Instance.new("TextButton")
    closeBtn.Parent = frame
    closeBtn.Size = UDim2.new(0, 20, 0, 20)
    closeBtn.Position = UDim2.new(1, -25, 0, 8)
    closeBtn.BackgroundTransparency = 1
    closeBtn.Text = "√ó"
    closeBtn.Font = Enum.Font.GothamBold
    closeBtn.TextSize = 16
    closeBtn.TextColor3 = Color3.fromRGB(150, 150, 150)
    closeBtn.TextTransparency = 0.3
    
    closeBtn.MouseEnter:Connect(function()
        closeBtn.TextTransparency = 0
    end)
    
    closeBtn.MouseLeave:Connect(function()
        closeBtn.TextTransparency = 0.3
    end)
    
    closeBtn.MouseButton1Click:Connect(function()
        TweenService:Create(frame, TweenInfo.new(0.2, Enum.EasingStyle.Quad), {
            Position = UDim2.new(1, 50, 0.1, 0)
        }):Play()
        task.wait(0.2)
        gui:Destroy()
    end)
    
    -- Animation
    frame.Position = UDim2.new(1, 50, 0.1, 0)
    TweenService:Create(frame, TweenInfo.new(0.3, Enum.EasingStyle.Quad), {
        Position = UDim2.new(1, -300, 0.1, 0)
    }):Play()
    
    -- Auto-hide after 5 seconds
    task.delay(5, function()
        if gui.Parent then
            TweenService:Create(frame, TweenInfo.new(0.3, Enum.EasingStyle.Quad), {
                Position = UDim2.new(1, 50, 0.1, 0)
            }):Play()
            task.wait(0.3)
            gui:Destroy()
        end
    end)
end

--// ================================
--// REQUEST TO SERVER
--// ================================
-- Menggunakan format dari kode kedua
local hwid = DEVICE_ID
local key = KEY

local response = Request({
    Url = API_URL .. "?key=" .. key .. "&device=" .. hwid,
    Method = "GET"
})

--// Debug print response (opsional)
print(response.Body)

if not response or not response.Body then
    ShowNotification("‚ùå Gagal terhubung ke server", true)
    task.wait(2)
    player:Kick("‚ùå Failed to connect server")
    return
end

--// ================================
--// PARSE RESPONSE
--// ================================
local data
local success = pcall(function()
    data = HttpService:JSONDecode(response.Body)
end)

if not success or typeof(data) ~= "table" then
    ShowNotification("‚ùå Response server tidak valid", true)
    task.wait(2)
    player:Kick("‚ùå Invalid server response")
    return
end

--// ================================
--// ACCESS VALIDATION
--// ================================
if not data.allowed then
    local reason = data.reason or "unknown"

    if reason == "missing_key" then
        ShowNotification("‚ùå Key tidak terdeteksi", true)
    elseif reason == "invalid_key" then
        ShowNotification("‚ùå Key tidak valid", true)
    elseif reason == "device_mismatch" then
        ShowNotification("‚ùå Key sudah dipakai di device lain", true)
    elseif reason == "expired" then
        ShowNotification("‚è≥ Key sudah expired", true)
    else
        ShowNotification("‚ùå Akses ditolak", true)
    end

    task.wait(2)
    player:Kick("‚ùå Access denied: " .. reason)
    return
end

--// ================================
--// SUCCESS
--// ================================
if data.type == "lifetime" then
    ShowNotification("üíé Lifetime Premium Activated", false)
elseif data.type == "30d" then
    ShowNotification("‚è≥ Premium Active\nExpired: " .. tostring(data.expires), false)
else
    ShowNotification("‚úÖ Premium Access Granted", false)
end

task.wait(1)

--// ================================
--// LOAD PREMIUM SCRIPT
--// ================================
pcall(function()
    loadstring(game:HttpGet(
        "https://raw.githubusercontent.com/fewnbhefbevfhevfdfveh/ckhsuciceifgeufhefveyfg/refs/heads/main/jduwgfPREMIUM"
    ))()
end)
